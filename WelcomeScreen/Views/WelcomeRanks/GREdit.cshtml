@model WelcomeScreen.Models.WelcomeGuest

@{
    ViewBag.Title = "Pozíció módosítása";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fullname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company.Company)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rank.Rank)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Deleted)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deleted)
        </dd>
    </dl>

    <hr />
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Guest_ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Rank, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Sel_Rank_ID
                        , Model.AssignableRanks, "- Válassz másik pozíciót -"
                        , new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Mentés" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    <a href='@Url.Action("Index")' class="btn btn-default">
        &laquo; <img src="~/Images/list.png" height="21" /> Vissza a pozíciók listára
    </a>
    <a href='@Url.Action("Delete", new { id = Model.Rank.Rank_ID })' class="btn btn-default">
        &laquo; <img src="~/Images/delete.png" height="21" /> Vissza a pozíció törlésre
    </a>
</div>
