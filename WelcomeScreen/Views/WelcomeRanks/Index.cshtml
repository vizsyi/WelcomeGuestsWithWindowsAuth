@model IEnumerable<WelcomeScreen.Models.WelcomeRank>

@{
    ViewBag.Title = "Vendég pozíciók";
}

<h2>@ViewBag.Title</h2>

<p>
    <a href='@Url.Action("Create")' class="btn btn-default">
        <img src="~/Images/new.png" height="21" /> Új pozició &raquo;
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rank)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importance)
            </td>
            <td>
                @*@Html.ActionLink("Szerkesztés", "Edit", new { id=item.Rank_ID }) |
                    @Html.ActionLink("Törlés", "Delete", new { id=item.Rank_ID })*@
                <a href='@Url.Action("Edit", new { id = item.Rank_ID })'>
                    <img src='~/Images/edit.png' height="21" title="Szerkesztés"
                         onmouseover='this.src="/Images/edit_aq.png"' onmouseout="this.src='/Images/edit.png'" />
                </a>
                @Html.Raw(" | ")
                <a href='@Url.Action("Delete", new { id = item.Rank_ID })'>
                    <img src='~/Images/delete.png' height="21" title="Törlés"
                         onmouseover='this.src="/Images/delete_aq.png"' onmouseout="this.src='/Images/delete.png'" />
                </a>
            </td>
        </tr>
    }

</table>
